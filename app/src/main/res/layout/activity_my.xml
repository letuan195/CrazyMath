<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar" />
    <ImageButton
        android:id="@+id/ibSound"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_volume_on"
        android:layout_below="@+id/progressBar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvScore"
        android:text="0"
        android:textSize="56dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/progressBar"
        android:layout_marginRight="12dp"/>

    <LinearLayout
        android:id="@+id/linearAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/progressBar"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:text="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="48sp"
            android:text="+"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:text="1"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/linearEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearAdd"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:layout_marginRight="16dp"
            android:text="="/>
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:text="2"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearTouch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_alignParentBottom="true"
            android:id="@+id/btFalse"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:src="@drawable/no_512"
            android:background="@android:color/white"
            android:layout_marginRight="24dp"/>
        <ImageButton
            android:layout_alignParentBottom="true"
            android:id="@+id/btTrue"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:background="@android:color/white"
            android:src="@drawable/yes_512"/>

    </LinearLayout>

</RelativeLayout>
